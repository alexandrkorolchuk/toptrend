<footer class="footer footer-site">
  <div class="container">
    <div class="footer-inner">
      {% for block in section.blocks %}
        {% if block.type == "footer_top"%}
          <div class="footer-top">
            <div class="footer-grid">
              {% if block.settings.show_newsleater %}
                <div class="footer-column footer-column-1 footer-subscribe__wrap">
                  <div class="footer-menu__title">
                    {{ block.settings.newsleater_title }}
                  </div>
                  <div class="footer-subscribe">
                    <form id="ContactFooter" class="footer__newsletter newsletter-form">
                      <div class="footer-subscribe__form-group">
                        <input type="email" value="" placeholder="Enter your email" name="contact[email]"
                               id="Email-subscribe-footer" class="footer-subscribe__form-group__input"
                               data-fild-id="email"
                               autocapitalize="off">
                        <button type="submit" class="button btn footer-subscribe__form-group__submit"
                                name="commit" title="Subscribe">{{ block.settings.newsleater_button }}
                        </button>
                      </div>
                    </form>

                  </div>
                </div>
              {% endif %}
              {% for link in block.settings.footer_top_menu.links %}
                <div class="footer-column footer-column-{{ forloop.index | plus:1 }}">
                  <div class="footer-menu__title">
                    {{ link.title }}
                  </div>
                  {% if link.links != blank %}
                    <ul class="footer-menu">
                      {% for sub_link in link.links %}
                        <li>
                          <a href="{{ sub_link.url }}">{{ sub_link.title }}</a>
                        </li>
                      {% endfor %}
                    </ul>
                  {% endif %}
                </div>
                {% if forloop.index == 2 %}
                  {% break %}
                {% endif %}
              {% endfor %}
              <div class="footer-column footer-column-4 ">
                {% if block.settings.logo %}
                  <div class="footer-column-1x">
                    <a href="{{ routes.root_url }}" class="footer__logo desktop-hide">
                      <img src="{{ block.settings.logo | img_url: "master" }}" alt="Logo">
                    </a>
                  </div>
