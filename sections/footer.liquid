        {% if block.type == "footer_bottom"%}
          <div class="footer-bottom">
            {% if block.settings.logo %}
              <div class="footer-column">
                <a href="{{ routes.root_url }}" class="footer__logo mobile-hide">
                  <img src="{{ block.settings.logo | img_url: "master" }}" alt="Logo">
                </a>
              </div>
            {% endif %}
            <div class="footer-column">
              <ul class="footer-menu footer-menu--info">
                {% for policy in shop.policies %}
                  <li>
                    <a href="{{ policy.url }}"> {{ policy.title }}</a>
                  </li>
