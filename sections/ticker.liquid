<div class="ticker__viewport">
    <ul class="ticker__list" data-ticker="list">
        {% for block in section.blocks %}
            <li class="ticker__item" data-ticker="item">{{ block.settings.text }}</li>
        {% endfor %}
    </ul>
</div>

{% schema %}
{
"name": "Ticker",
"blocks": [
{
"type": "ticker_item",
"name": "Ticker item",
"settings": [
{
"type": "text",
"id": "text",
"label": "Text",
"default": "Ticker item"
}
]
}
],
"presets": [
{
"name": "Ticker",
"blocks":[
{
"type": "ticker_item"
},
{
"type": "ticker_item"
},
{
"type": "ticker_item"
}
]
}
]
}
{% endschema %}